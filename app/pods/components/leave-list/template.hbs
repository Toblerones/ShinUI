
<div class="page-header">
<h1><span class="label label-primary">{{header}}</span></h1>
</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Leave ID</th>
				<th>Staff Name</th>
				<th>Status</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Leave Type</th>
			</tr>
		</thead>
		<tbody>
			{{#each model.leaves as |leave| }}
				<tr class="detail" {{action 'leaveDetail' leave.leaveId}}>
					<td>{{leave.leaveId}}</td>
					<td>{{leave.staffName}}</td>
					<td>{{leave.status}}</td>
					<td>{{leave.startDate}}</td>
					<td>{{leave.endDate}}</td>
					<td>{{leave.leaveType}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{yield}}
