<div class="page-header">
<h1><span class="label label-primary">Home</span></h1>
</div>

<div class="panel panel-primary">
	<div class="panel-heading">
        <h3 class="panel-title">System Notification</h3>
    </div>
    <div class="panel-body">
      	<p>System Info 1</p>
      	<p>System Info 2</p>
      	<p>System Info 3</p>
      	<p>System Info 4</p>
      	<p>System Info 5</p>
    </div>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>   
    <!-- Wrapper for carousel items -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../img/pic1.png" alt="First Slide">
        </div>
        <div class="item">
            <img src="../img/doge.jpg" width="560"  alt="Second Slide">
        </div>
        <div class="item">
            <img src="../img/pic3.png" alt="Third Slide">
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

