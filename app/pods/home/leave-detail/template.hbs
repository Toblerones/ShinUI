<div class="page-header">
<h1><span class="label label-primary">Leave Detail</span></h1>
</div>
<div class="row">
	<div class="col-lg-1">
		<a class="btn btn-default" href="/home/leaves" role="button">Back</a>
	</div>	
	{{#if isRequester}}
	<div class="col-lg-10"></div>
	<div class="col-lg-1">
		<button type="submit" class="btn btn-primary right" {{action "confirmReq" "cancel"}} disabled={{isStatusChanged}}>Cancel Request</button>
	</div>
	{{/if}}

	{{#if isApprover}}
	<div class="col-lg-7"></div>
	<div class="col-lg-4">
		<div class="btn-group right" role="group">
			<button type="submit" class="btn btn-primary" {{action "confirmReq" "approve" }} disabled={{isStatusChanged}}>Approve Request</button>
			<button type="submit" class="btn btn-default" {{action "confirmReq" "reject" }} disabled={{isStatusChanged}}>Reject Request</button>
		</div>
	</div>
	{{/if}}

</div>
<br>
<div class="well">
	<div class="row buffer">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Leave ID</span>
			  <span class="input-group-addon " >{{model.leaveId}}</span>
			</div>
		</div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Leave Type</span>
			  <span class="input-group-addon" >{{model.leaveType}}</span>
			</div>
		</div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Status</span>
			  <span class="input-group-addon" >{{model.status}}</span>
			</div>
		</div>
	</div>

	<div class="row buffer">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Staff ID</span>
			  <span class="input-group-addon " >{{model.staffId}}</span>
			</div>
		</div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Staff Name</span>
			  <span class="input-group-addon" >{{model.staffName}}</span>
			</div>
		</div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Title</span>
			  <span class="input-group-addon" >{{model.title}}</span>
			</div>
		</div>
	</div>

	<div class="row buffer">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Start Date</span>
			  <span class="input-group-addon " >{{model.startDate}}</span>
			  <span class="input-group-addon " >{{model.startHalf}}</span>
			</div>
		</div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >End Date</span>
			  <span class="input-group-addon" >{{model.endDate}}</span>
			  <span class="input-group-addon" >{{model.endHalf}}</span>
			</div>
		</div>

		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Leave Days</span>
			  <span class="input-group-addon" >{{model.leaveDays}} </span>
			  <span class="input-group-addon" >HMD </span>
			</div>
		</div>
	</div>

	<div class="row buffer">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Submit Time</span>
			  <span class="input-group-addon " >{{model.createTime}}</span>
			</div>
		</div>
		<div class="col-lg-6">
			<div class="input-group">
			  <span class="input-group-addon detail-label" >Comments</span>
			  <textarea  rows="3" class="form-control" value={{model.comments}} disabled></textarea>
			</div>
		</div>
	</div>


</div>
{{confirm-modal model=model confirmMsg=confirmMsg}}